<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="¡ Bienvenido a mi App !" VerticalOptions="Start" TextColor="White" FontSize="36"/>
        </Frame>
        <Button Text="Este es un boton" Clicked="Button_Clicked"></Button>
        <Label Text="Mira como cambia el contador" FontSize="Title" HorizontalTextAlignment="Center"  Padding="30,10,30,10"/>
        <Label Text="Tambien puedes dar click en 'reset'" HorizontalTextAlignment="Center" FontSize="16" Padding="30,0,30,0"/>
        <Label FontSize="16" Padding="30,24,30,0">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Texto de span" />
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        <Button Text="Reset" Clicked="Button_Clicked_1" BackgroundColor="Aquamarine"></Button>
    </StackLayout>

</ContentPage>
